{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/main.ts",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "npx eslint .",
    "docker:build": "docker build -t lara_backend docker",
    "docker:run": "docker run -it -v $(pwd)/.:/app --name lara_container lara_backend bash",
    "docker:start": "docker start -i lara_container",
    "docker:stop": "docker stop lara_container",
    "docker:exec": "docker exec -i -t lara_container bash",
    "compose:up": "docker compose -f ./docker/docker-compose.yaml up -d --build",
    "compose:down": "docker compose -f ./docker/docker-compose.yaml -v down",
    "compose:exec": "docker compose -f docker/docker-compose.yaml exec -it lara_backend bash",
    "db:createtable": "npx ts-node src/infrastructure/dynamodb/tables/CreateUsersTable.ts && npx ts-node src/infrastructure/dynamodb/tables/CreateRefreshTokensTable.ts",
    "db:deletetable": "npx ts-node src/infrastructure/dynamodb/tables/DeleteUsersTable.ts && npx ts-node src/infrastructure/dynamodb/tables/DeleteRefreshTokensTable.ts",
    "db:cleanup:tokens": "npx ts-node src/cli/CleanupExpiredTokens.ts",
    "create:admin": "ts-node src/cli/CreateAdmin.ts -- 'John Doe' 'admin@example.com' 'aVeryStrongPassword123' '11144477735' '5511999998888' '1990-01-01'"
  },
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@eslint/markdown": "^7.4.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "axios": "^1.11.0",
    "eslint": "^9.34.0",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.872.0",
    "@aws-sdk/lib-dynamodb": "^3.872.0",
    "@fastify/cookie": "^11.0.2",
    "@nestjs/common": "^11.1.9",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.0.1",
    "fastify": "^5.6.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^6.0.0",
    "inversify": "^7.9.1",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.8.1",
    "zod": "^4.1.5"
  }
}
